<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.HospedagemContratada"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="Black">
    <VerticalStackLayout VerticalOptions="CenterAndExpand"
                         Padding="10"
                         BackgroundColor="Gray">

        <Label Text="{Binding QuartoSelecionado.Descricao}"
               TextColor="Black"
               FontFamily="Kalam-Light"
               FontSize="50"
               HorizontalTextAlignment="Center"/>

        <Frame Margin="10" BackgroundColor="Black"  >
            <HorizontalStackLayout>
                <HorizontalStackLayout>
                    <Label Text="Adultos: " 
                           TranslationX="10"/>
                    <Label Text="{Binding QntAdultos}"                           
                           TranslationX="15"
                           TextColor="White"/>
                </HorizontalStackLayout>
                
                <HorizontalStackLayout>
                    <Label Text="CrianÃ§as: " 
                           TranslationX="120"/>
                    <Label Text="{Binding QntCriancas}"
                           TranslationX="125"
                           TextColor="White"/>
                </HorizontalStackLayout>             
            </HorizontalStackLayout>                              
        </Frame>
        
        <Frame Margin="10"
               BackgroundColor="Black">
            <Grid ColumnDefinitions="*, *, *"
                  RowDefinitions="Auto, Auto">
                <Label Grid.Row="0" Grid.Column="0" Text="Check-in:"
                       TextColor="White"/>
                <Label Grid.Row="0" Grid.Column="1" Text="Check-out:"
                       TranslationX="20" TextColor="White"/>
                <Label Grid.Row="0" Grid.Column="2" Text="Estadia:"
                       TranslationX="50" TextColor="White"/>

                <Label Grid.Row="1" Grid.Column="0" Text="{Binding DataCheckIn}"/>
                
                <Label Grid.Row="1" Grid.Column="1" Text="{Binding DataCheckOut}" TranslationX="20"/>
                
                <Label Grid.Row="1" Grid.Column="2" Text="{Binding Estadia}" TranslationX="70"/>
                
            </Grid>
        </Frame>

        <Frame Margin="10" BackgroundColor="Black">
            <HorizontalStackLayout>
                <Label Text="Valor Total: R$"
                       TextColor="White"/>
                <Label Text="{Binding ValorTotal}"/>
            </HorizontalStackLayout>
        </Frame>

        <Button Text="Voltar"
                TextColor="White"
                HorizontalOptions="Center"
                Clicked="Button_Clicked"
                BackgroundColor="Black"
                TranslationY="-2"/>

    </VerticalStackLayout>
    
</ContentPage>